<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="message" class="belajar.spring.domain.Person">
        <!-- collaborators and configurat<propertyion for this bean go here -->
        <property name="nama" value="Jimi Black"></property>
        <property name="alamat" ref="rumah"></property>
    </bean>

    <bean id="rumah" class="belajar.spring.domain.Address">
        <!-- collaborators and configuration for this bean go here -->
        <property name="jalan" value="Jl. Lintas Sumbawa"></property>
        <property name="kota" value="Dompu NTB"></property>
        <property name="kodePos" value="84251"></property>
    </bean>

    <!-- more bean definitions go here -->

</beans>
